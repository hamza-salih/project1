<Window x:Class="project1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="180*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="187*"/>
            <ColumnDefinition Width="613*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="BtnAjouter" Content="Ajouter" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="132" Click="BtnAjouter_Click" Margin="31,63,0,0" Grid.Row="1"/>
        <DataGrid ItemsSource="{Binding EtdList}" x:Name="GridGestionEtudiant" Grid.Column="1" Grid.Row="1"/>

    </Grid>
</Window>
